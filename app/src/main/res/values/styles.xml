<resources>

    <!-- Base application theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_filter</item>
        <item name="colorPrimaryDark">@color/background_filter</item>
        <item name="colorAccent">@color/background_filter_text</item>

    </style>

    <style name="ProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_filter</item>
        <item name="colorPrimaryDark">@color/background_filter</item>
        <item name="colorAccent">@color/filter_Accent</item>
    </style>

    <style name="FilterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_filter</item>
        <item name="colorPrimaryDark">@color/background_filter</item>
        <item name="colorAccent">@color/filter_Accent</item>
    </style>
