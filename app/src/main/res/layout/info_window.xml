<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="150dp"
    android:background="@drawable/background_info_window"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/windowTitle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:maxLines="3"
        android:singleLine="false"
        android:text="Книжный магазин Буквоед"
        android:textColor="#000000"
        android:textStyle="bold"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:background="#ababab" />

    <TextView
        android:id="@+id/windowAddress"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:maxLines="3"
        android:singleLine="false"
        android:text="Адрес магазина"
        android:textColor="#666666"
        android:textSize="12sp"
        tools:ignore="TextViewEdits" />

    <TextView
        android:id="@+id/windowTimeWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:singleLine="false"
        android:text="Время работы"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/windowServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="hardware"
        android:maxLines="2"
        android:minLines="2"
        android:singleLine="true"
        android:text="Услуги:"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/service_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="start"/>

        <ImageView
            android:id="@+id/service_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/service_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="end"
            android:layout_marginStart="5dp" />

    </LinearLayout>

</LinearLayout>
